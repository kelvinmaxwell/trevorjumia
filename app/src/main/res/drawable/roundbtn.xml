<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#795E5E" />
            <gradient android:angle="-90" android:startColor="#593437" android:endColor="#9A686F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795E61" />
            <solid android:color="#EE0606"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="3dip" android:color="#79675E" />
            <gradient android:angle="-90" android:startColor="#EC0840" android:endColor="#85585F" />
        </shape>
    </item>
</selector>